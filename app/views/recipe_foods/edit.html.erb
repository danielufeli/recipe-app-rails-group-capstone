<div class="form__container">
<%= tag.h1("Update the quantity of food for the given recipe", class: 'form__title') %>
<%= form_for @recipe_food do |f| %>
  <%= f.text_field :recipe, value: @recipe_food.recipe.name, readonly: true, class: 'input__readonly' %>
  <%= f.text_field :food, value: @recipe_food.food.name, readonly: true, class: 'input__readonly' %>
  <%= f.text_field :quantity, value: @recipe_food.quantity %>
  <%= f.submit 'Update', class: 'btnn' %>
<% end %>
</div>